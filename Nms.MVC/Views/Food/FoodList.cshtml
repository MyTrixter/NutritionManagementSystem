@model IEnumerable<Nms.Db.Entities.Food>

@{
    ViewData["Title"] = "Food List";
    var currentSearch = ViewData["CurrentSearch"] as string ?? "";
    var currentSort = ViewData["CurrentSort"] as SortOrder?;
}

<h1>Food List</h1>

<form method="get">
    <div class="form-group">
        <label for="searchName">Filter by Name:</label>
        <input type="text" name="searchName" value="@currentSearch" class="form-control" placeholder="Enter name" />
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a href="?sortOrder=@SortOrder.NameAsc&searchName=@currentSearch">Name Ascending</a> |
                <a href="?sortOrder=@SortOrder.NameDesc&searchName=@currentSearch">Name Descending</a>
            </th>
            <th>
                <a href="?sortOrder=@SortOrder.CaloriesAsc&searchName=@currentSearch">Calories Ascending</a> |
                <a href="?sortOrder=@SortOrder.CaloriesDesc&searchName=@currentSearch">Calories Descending</a>
            </th>
            <th>Protein</th>
            <th>Fats</th>
            <th>Carbohydrates</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var food in Model)
        {
            <tr>
                <td>@food.Name</td>
                <td>@food.Calories</td>
                <td>@food.Protein</td>
                <td>@food.Fats</td>
                <td>@food.Carbohydrates</td>
            </tr>
        }
    </tbody>
</table>
